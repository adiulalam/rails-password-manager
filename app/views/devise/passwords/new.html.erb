<div class="flex flex-col items-center gap-4 justify-center">
  <%= render_card title: "Forgot your password?" do %>
    <%= render_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |form| %>

      <div class="p-6 pt-0">
        <%= form.label :email %>
        <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "col-span-2" %>
      </div>

      <div class="flex flex-col gap-2 items-center justify-center mb-8">
        <%= form.submit "Reset Password" %>
        <%= link_to "Back to Log in", new_session_path(resource_name) %>
      </div>
    <% end %>
  <% end %>
</div>
