<%= render_card title: (@password.persisted? ? "Edit Password" : "New Password") do %>
  <%= render_form_for(@password) do |form| %>
    <div class="p-6 pt-0">
      <%= form.label :url, class: "text-right mr-4 text-lg" %>
      <%= form.text_field :url, class: "col-span-2" %>
    </div>

    <div class="p-6 pt-0">
      <%= form.label :username, class: "text-right mr-4 text-lg" %>
      <%= form.text_field :username, class: "col-span-2" %>
    </div>

    <div class="p-6 pt-0">
      <%= form.label :password, class: "text-right mr-4 text-lg" %>
      <%= form.text_field :password, class: "col-span-2" %>
    </div>

    <% if password.errors.any? %>
      <div class="text-red-500 p-6 pt-0">
        <h2><%= pluralize(password.errors.count, "error") %> prohibited this password from being saved:</h2>

        <ul>
          <% password.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="flex justify-center mb-8">
      <%= form.submit @password.persisted? ? "Edit Password" : "Create Password" %>
    </div>
  <% end %>
<% end %>
